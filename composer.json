{
    "name": "cviniciussdias/buscador-cursos",
    "description": "Projeto que busca os cursos no site da Alura",
    "type": "library",
    "autoload": {
        "psr-4": {
            "Cviniciussdias\\BuscadorCursos\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Vinicius Dias",
            "email": "carlosv775@gmail.com"
        }
    ],
    "require": {
        "guzzlehttp/guzzle": "^7.4",
        "symfony/css-selector": "^5.3",
        "symfony/dom-crawler": "^5.3"
    },
    "autoload": {
        "psr-4": {
            "Alura\\BuscadorDeCursos\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6",
        "phan/phan": "^5.2"
    },
    "scripts": {
        "cs": "phpcs --standard=PSR12 src/",
        "phan": "phan --allow-polyfill-parser",
        "test": "phpunit tests/TestBuscadorDeCursos.php",
        "check": ["@phan","@cs","@test"],
        "post-update-cmd": ["@test"]
    },
    "scripts-descriptions": {
        "cs": "Run the PHP Code Sniffer",
        "phan": "Run the Phan static analyzer",
        "test": "Run the PHPUnit Test available",
        "check": "Roda as verifições do código. PHAN, PHPCS e PHPUNIT"
    }
}
